<article class="module width_full">
	<header><h3 class="tabs_involved">New Project</h3>
		<ul class="tabs">
   			<li><a href="#tab1">Details</a></li>
 
		</ul>
	</header>
	<div class="tab_container">
		
		<div id="tab1" class="tab_content">
			<form id="new_entity" method="post" action="/admin/set_project">
				<input name="new_project" type="hidden" value="true">
				<div class="module_content">
						<fieldset style="width:48%; float:left; margin-right: 3%;">
							<label>Shopper Email</label>
							<input name="shopper_email" type="email" style="width:90%">
						</fieldset>
						<fieldset style="width:48%; float:left;">
							<label>Product Category</label>
							<!-- <input name="category" type="text" style="width:90%"> -->
							<select name="category">
								<% Category.all.map{|p| %>
  									<option value="<%=p.name%>"><%=p.name%></option>
  								<% } %>
 
							</select>
						</fieldset><div class="clear"></div>
						<fieldset>
							<label>Project Title</label>
							<input name="project_title" type="text" style="width:90%">
						</fieldset>
						<fieldset>
							<label>Project Details</label>
							<textarea name="project_details" style="height: 40px;"></textarea>
						</fieldset>
						<fieldset>		
							<label>Liked Images (1,2,3)</label>
							<input name="liked_images" type="text">	
						</fieldset>
						<fieldset>
							<label>Designers(email,email,email)</label>
							<input name="designers" type="text">
						</fieldset>
						<!-- <fieldset>
							<label>Designer 2 (email)</label>
							<input name="designer[2]" type="text">
						</fieldset>
						<fieldset>
							<label>Designer 3 (email)</label>
							<input name="designer[3]" type="text">
						</fieldset> -->
						<div class="clear"></div>
				</div>
			<footer>
			<div class="submit_link">
				<input type="submit" value="Save" class="alt_btn">
				<input type="submit" value="Reset" onclick="clear_form_elements('#new_entity');return false;">
			</div>
			</footer>
		</form>
			
		</div>
</div>
	
</article>

<script type="text/javascript">
	function clear_form_elements(ele) {
	
    $(ele).find(':input').each(function() {
        switch(this.type) {
            case 'password':
            case 'select-multiple':
            case 'select-one':
            case 'text':
            case 'textarea':
                $(this).val('');
                break;
            case 'checkbox':
            case 'radio':
                this.checked = false;
        }
      
    });
    return false;

}

	
</script>
