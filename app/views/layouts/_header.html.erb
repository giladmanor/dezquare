<%
home_link = root_path
display_how = 1
unless current_user.nil? 
	if current_user.shopper
		home_link = "/site/dashboard"
		sett = "/site/settings"
	elsif current_user.designer
		home_link = "/designer/dashboard"
		sett = "/designer/settings"
		display_how = 0
	else

	end
end

%>
	

<header id="header" class="clearfix lighter">
			<h1 id="logo">
				<a href="<%= home_link %>">
					<img src="/newver/img/logo.png" alt="Dezquare" width="172" height="42" />
				</a>
			</h1>
			<div class="square"></div>
			
			<div class="links">
				<% if display_how == 1 %>
					<a href="/home/how-it-works" class="small-link">How does it work?</a>
				<% end %>
				<% if user_signed_in? %>
					<a href="<%= sett %>" class="btn btn-1">Settings</a>
					<a href="/logout" class="btn btn-2">Sign out</a>
				<% else %>
					<a href="/designer_signup" class="btn btn-1">Are you a designer?</a>
					<a href="/login" class="btn btn-2">Sign in</a>
				<% end %>
			</div>
</header>