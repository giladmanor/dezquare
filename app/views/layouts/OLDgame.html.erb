	<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
		<div id="content" style="margin-top:-12px;">		
			<div class="page-content" style="margin-top:90px;">
			
				<%
				unless @game.stage.progress_label.nil? || @game.stage.progress_label.length==0 
				
				%>
				
				<div id="game-bar" class="active-<%=@game.type.labels.index(@game.stage.progress_label)+1%>">
					<%
					i=0
					@game.type.labels.each{|l|
						i+=1
						active= @game.stage.progress_label==l ? "active" : ""
						  
						%>
						<div class="step step<%=i%> <%=active%>">
							<span class="number"><%=i%></span>
							<span class="name"><%=l%></span>
						</div>
						<%
					}
					
					%>
					
					
				</div>
				<%
				end
				%>
				
				<%= yield %>
				
				
			</div>			
		</div>
	</div>
	
