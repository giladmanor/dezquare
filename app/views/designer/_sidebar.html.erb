<div id="sidebar">
	<div class="title">
		Summary:
		<%if @editable%>
		<a href="/designer/settings" class="edit">
			<img src="/img/pen.png" alt="Edit" />
		</a>
		<%end%>
	</div>
	<div class="sidebar-white-box">
		<% summary_blank = (@author.dob.blank?) && (@author.location.blank?) && (@author.languages.blank?) %>
		<%if @editable && summary_blank %>
			<a href="/designer/settings">Give us the basics</a>
		<%else%>
			<div id="sidebar-summary">
				<div class="row">
					<div class="col1">Age:</div>
					<div class="col2"><%=@author.dob.nil? ? 'Unspecified' : (Time.now.year-@author.dob.year)%></div>
				</div>
				<div class="row">
					<div class="col1">From:</div>
					<div class="col2"><%=(@author.location.nil? || @author.location=="") ? 'Unspecified' : @author.location%></div>
				</div>
				<div class="row">
					<div class="col1">Languages:</div>
					<div class="col2"><%=raw(@author.languages.map{|l| l.name}.join(" <span>&amp;</span> "))%></div>
				</div>
			</div>
		<%end%>
		
	</div>
	<div class="title">
		Expertise:
		<%if @editable%>
		<a href="/designer/settings" class="edit">
			<img src="/img/pen.png" alt="Edit" />
		</a>
		<%end%>
	</div>
	<div class="sidebar-white-box">
		<%if @editable && (@author.skills.nil? || @author.skills=="")%>
			<a href="/designer/settings">Tell us about your skills!</a>
		<%else%>
			<p style="white-space: pre-wrap"><%=@author.skills%></p>
		<%end%>
		</div>
	<div class="title">
		About <%=@author.name%>:
		<%if @editable%>
		<a href="/designer/settings" class="edit">
			<img src="/img/pen.png" alt="Edit" />
		</a>
		<%end%>
	</div>
	<div class="sidebar-white-box">
		<%if @editable && (@author.about.nil? || @author.about=="")%>
			<a href="/designer/settings">Add a short Bio</a>
		<%else%>
			<p style="white-space: pre-wrap"><%=@author.about%></p>
		<%end%>
	</div>
	
	<div class="title">
		Education:
		<%if @editable%>
		<a href="/designer/settings" class="edit">
			<img src="/img/pen.png" alt="Edit" />
		</a>
		<%end%>
	</div>
	<div class="sidebar-white-box">
		<%if @editable && (@author.education.nil? || @author.education=="")%>
			<a href="/designer/settings">Where did you get those amazing skills?</a>
		<%else%>
			<p style="white-space: pre-wrap"><%=@author.education%></p>
		<%end%>
		</div>
	<div class="title">
		Colors:	
	</div>
	<div class="sidebar-white-box">
		<%if @author.dominant_colors.present? %>
			<p align="center"><table style="border:1px solid; border-color: #000000; border-collapse: collapse;" width="214" cellpadding="0" cellspacing="0">
			<tr style="border:1px solid; border-color: #000000; border-collapse: collapse;">
				<% @author.dominant_colors.each do |col| %>
					<td height="30" style="background-color:<%= col %>; border:1px solid; border-color: #000000; border-collapse: collapse;">&nbsp;</td>
				<% end %>
			</tr>
			</table></p>
		<%end%>
	</div>
	<div class="sidebar-white-box">
		<div>
			<a href="http://www.facebook.com/sharer/sharer.php?u=http://dezquare.com/designer/profile/<%=@author.url_identifier%>" target="_blank">Share this profile on Facebook &raquo;</a>
		</div>
		<div>
			<a href="https://twitter.com/intent/tweet?url=http://dezquare.com/designer/profile/<%=@author.url_identifier%>&text=Hey! Check this:" target="_blank">Share this profile on Twitter &raquo;</a>
		</div>
		
	</div>
</div>
				