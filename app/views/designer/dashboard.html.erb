						<div id="match-projects" class="white-box">	
							<%
							matches.reverse.reject{|g| g.project.nil? || g.user.nil? }.each{|game|
								%>
									<div class="project">
										<div class="basic">
											<div class="icon">
												<img src="/img/icons/<%=game.category.icon%>.png" />
											</div>
											<div class="name-and-client">
												<div class="name"><%=game.project.title%></div>
												<div class="client"><%=game.user.full_name%></div>
											</div>
											<div class="action">
												<%
												disable_contact = false
												
												if game.project.status=="started"
												%>
												<!-- <a href="#" class="black-button esmall-font accept-design" onclick="accept_project(<%=game.project.id%>)">Accept</a> -->
												<a href="#" class="decline" onclick="$('#cusomer_mail').attr('href','mailto:<%=game.user.email%>');$('#reject_project').attr('href','/designer/reject_project/<%=game.project.id%>');">Decline</a>
												<%
												elsif @user.id==game.project.designer_id
												%>
												<span>Taken by you</span>
												<%	
												else
													disable_contact = true
												%>
												<span>Taken by someone else</span>
												<%
												end
												%>
											</div>
										</div>
										<div class="detailed">
											<div class="col1">
												<div class="title">About the desired <%=game.category.name%></div>
												<div class="about-project">
													<%=game.project.info%>
												</div><br />
												<!-- <div class="about-project">File Types: <%=game.project.file_types%></div> -->
												<%
												unless disable_contact
													%>
													<a href="mailto:<%=game.user.email%>" class="contact">
														<span class="icon"></span>
														<span class="text">Contact client</span>
													</a>
													<%
												end
												%>
												
											</div>
											<div class="col2">
												<div class="title">Designs Liked by <%=game.user.name%></div>
												<div class="designs">
													<%
													images=game.game_image_rates.select{|r| r.value==1}.map{|r| r.image}.compact
													
													images.take(3).each{|image|
														%>
														<div class="design">
															<img src="/repository/thumbnail/<%=image.file_path%>" style="max-width: 119px;max-height: 128px;"/>
														</div>
														<%
													}
													%>
													
												</div><p>&nbsp;</p><p>&nbsp;</p><p>&nbsp;</p><p>&nbsp;</p><p>&nbsp;</p>
												
												<div class="title"><%=game.user.name%>'s Favorite Colors
													
	<% if game.present? && game.dominant_colors.present? %>					
		<p align="center"><table style="border:1px solid; border-color: #000000; border-collapse: collapse;" width="214" cellpadding="0" cellspacing="0">
		<tr style="border:1px solid; border-color: #000000; border-collapse: collapse;">
			<% game.dominant_colors.each do |col| %>
				<td height="30" style="background-color:<%= col %>; border:1px solid; border-color: #000000; border-collapse: collapse;">&nbsp;</td>
			<% end %>
		</tr>
		</table></p>
	<% end %>
												</div>
												
												<div class="taste-indicators">
													<div class="title"><%=game.user.name%>'s Taste Indicators</div>
													<ul>
														<%
														tags = images.map{|si| si.tags}.flatten.uniq
														
														tags.each{|tag|
															%>
															<li><%=tag.name%></li>	
															<%	
														}
														
														%>
													</ul>
												</div>
											</div>
										</div>
										
										<div class="last-row">
											
											<div class="col1">
												<div class="payment"><!-- Payment: $<%=game.max_price%> -->&nbsp;</div>
											</div>
											<div class="col2">
												<div class="date"><%=game.created_at.strftime("%I:%M%p, %e %b %Y")%></div>
											</div>
										</div>
									</div>
								<%
							}
							%>
						</div>
						<%
					end
					
					%>
					
				</div>
			</div>			
		</div>
	</div>
	
	<div id="window-overlay" <%= (params[:show_invite_success]=="true") ? raw('style="display: block"') : ''%>></div>
	<div id="mark-complete-popup" class="popup">
		<span class="close"></span>
		<div class="popup-content">
			<div class="title">Have you completed the design?</div>
			<div class="subtitle">
				Before you mark the job as - "complete", <br/>
				make sure that your client think so too.
			</div>
			<a href="#" class="black-button small-font" id="project_mark_complete">Mark Complete</a>
		</div>		
	</div>
	
	<%=render "dashboard_popups"%>
	
	<div id="accept-project-popup" class="popup" >
		<span class="close" onclick="location='/designer/dashboard'"></span>
		<div class="popup-content">
			<div class="title" id="grabber_title">Checking...</div>
			<div class="subtitle" id="grabber_message">
				We are now checking the projects availability. 
			</div>
			<div class="desc" id="grabber_desc">Please wait</div>
			<a href="" id="grabber_mailto" class="black-button small-font" style="display: none">Contact Customer</a>
		</div>		
	</div>
	
	<div id="reject-project-popup" class="popup">
		<span class="close"></span>
		<div class="popup-content">
			<div class="title">Are you sure?</div>
			<div class="desc">
				Declining an invitation is an irreversable action.<br/>
				This project might be easier than you think!<br/>
				<span>Give your client a chance</span>
			</div>
			<a href="" id="cusomer_mail" class="black-button small-font">Contact Client</a>
			<a href="#" id="reject_project" class="decline-anyway">decline anyway</a>
		</div>		
	</div>