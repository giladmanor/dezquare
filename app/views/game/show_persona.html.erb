<%

tags = @game.game_image_rates.select{|gir| gir.value>0}.map{|gir| gir.image.tags}.flatten
logger.debug "Selected tags for persona: #{tags.inspect}"
@persona = Persona.find_by_tags(tags)[:p]

%>
<div class="wide-page-holder game-step" id="game-step-6">
	<div class="wide-page-wrap">
		<h2>Let’s get to know your taste</h2>
		<h4 class="big-orange">
			Congrats!<br/>
			<span>We’ve got your taste!</span>
		</h4>
		<form action="#" id="game5-form">
			<div class="big-image-holder">
				<img src="/persona/img/<%=raw(@persona.persona_image_backgrounds.first.file_path)%>" style="width: 949px;"/>
				<div class="big-image-info">
					<div class="title">
						<span>You are so</span> <%=@persona.name.upcase%>
					</div>
					<div class="description">
						<%=raw(@persona.description)%>
					</div>
					<div class="share">
						<a href="http://www.facebook.com/sharer/sharer.php?u=http://dezquare.andreiserban.com/soooo/<%=@persona.name%>" class="fb" target="_blank">
							<img src="/img/game-end/share-fb-black.png" alt="Showoff your taste on Facebook" class="normal" />
							<img src="/img/game-end/share-fb.png" alt="Showoff your taste on Facebook" class="hover" />
						</a>
						<a href="https://twitter.com/intent/tweet?url=http://dezquare.andreiserban.com/soooo/<%=@persona.name%>&text=Hey! Check this:" class="twitter" target="_blank">
							<img src="/img/game-end/share-twitter-black.png" alt="Showoff your taste on Twitter" class="normal" />
							<img src="/img/game-end/share-twitter.png" alt="Showoff your taste on Twitter" class="hover" />
						</a>
					</div>
				</div>
			</div>
			<div class="buttons2 clearfix">
				
				<a href="/game/index" class="black-button big-font next" id="submit-step-5">
					Start a Project
					
				</a>
			</div>
		</form>
	</div>
</div>


