<div id="contact-popup">
	<div class="page-content">
		<div class="center-wrap">				
			<div class="title"><h2>Get in touch with us!</h2></div>
			<!--<form action="/pender/register_designer_success" method="post" id="contact-form">-->
			<div class="center-wrap-box static-page tall" style="display:<%= @confirm.present? ? 'none' : 'block' %>;">
						<%= form_for @message, :url => contact_path do |form| %>
							<% if @message.errors.any? %>
    			 				<div id="error_explanation">
     								<span style="color: red"><%= pluralize(@message.errors.count, "error") %> prohibited your post from being sent:</span>
      								<%= !@error.nil? ? @error : ""%>
    							</div>
  							<% end %>
  							<fieldset>
  						<% if @user.present? %>
  							<p><h4>Name: <%=@user.full_name%></h4></p>
						<% else %>
							<div class="formfield">
								<!--<input type="text" class="text" name="name" />-->
								<%= form.text_field :name, :class => "text" %>
								<label class="abs">Name</label>
								<span class="vchecked"></span>
								<label class="form-error">Invalid Name</label>
							</div>
							<div class="formfield">
								<%= form.text_field :email, :class => "text" %>
								<label class="abs">E-mail address</label>
								<span class="vchecked"></span>
								<label class="form-error">Invalid Email Address</label>
							</div>
						<%end%>
							<div class="formfield">
								<%= form.text_field :subject, :class =>"text" %>
								<label class="abs">Subject</label>
								<span class="vchecked"></span>
								<label class="form-error">Invalid Subject</label>
							</div>
							<div class="formfield">
								<%= form.text_area :body, :class =>"text" %>
								<label class="abs">Message</label>
								<span class="vchecked"></span>
								<label class="form-error">Invalid Message</label>
							</div>
							<div class="submit clearfix">
								<input type="submit" class="button-orange" value="Send" />
							</div>		
						<!--</form>-->
						<label class="form-error" <%= !@error.nil? ? "style='display:block;'" : ""%>><%=@error%>RONEN</label>
						</fieldset>
						<%end%>
				
				<div class="foot">
					<center><p><h3>You can also shoot us an <a href="mailto:info@dezquare.com">email</a></h3></p></center>
				</div>
				
			</div>			
		</div>
	</div>
</div>

