<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <div><%= f.label :name %><br />
  <%= f.text_field :name, :autofocus => true %></div>

  <div><%= f.label "Last name" %><br />
  <%= f.text_field :l_name %></div>


  <div><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>
  
  <div>
  	<span class="checkbox">
		<input type="checkbox" name="agree_tos" />
	</span>
	<span class="text">
		I agree to the <a href="/site/privacy" target="_blank">Privacy Policy</a> &amp; <a href="/site/terms" target="_blank">Terms of Service</a>.
	</span>
  </div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
